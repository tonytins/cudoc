<audio controls>
    <source src="@Path/@Source" type="@Format">
    Your browser does not support the audio element.
</audio>

@code {
    [Parameter, EditorRequired] public string Source { get; set; } = string.Empty;
    [Parameter] public string Format { get; set; } = "audio/mpeg";
    [Parameter] public string Path { get; set; } = "music";
}

