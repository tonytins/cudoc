<div>
    <img src="/images/@Path/@Source" width="@Width" />
    @if (!string.IsNullOrEmpty(Caption))
    {
        <br />@Caption
    }
</div>

@code {
    /// <summary>
    /// Gets or sets the image source filename.
    /// </summary>
    [Parameter, EditorRequired]
    public string Source { get; set; } = string.Empty;

    /// <summary>
    /// Gets or sets the relative path to the image directory.
    /// </summary>
    [Parameter]
    public string Path { get; set; } = "gallery";

    /// <summary>
    /// Gets or sets the hyperlink target for the image.
    /// </summary>
    [Parameter]
    public string Link { get; set; } = string.Empty;

    /// <summary>
    /// Gets or sets the width of the image in pixels.
    /// </summary>
    [Parameter]
    public int Width { get; set; } = ThumbWidth.SMALL;

    /// <summary>
    /// Gets or sets the caption text displayed below the image.
    /// </summary>
    [Parameter]
    public string Caption { get; set; } = string.Empty;

}
