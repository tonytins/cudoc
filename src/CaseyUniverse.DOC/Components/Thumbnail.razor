@if (!string.IsNullOrEmpty(Align))
{
    <img src="/images/@Path/@Source" width="150" align="@Align" />
}
else
{
    <img src="/images/@Path/@Source" width="150" />
}

@code {
    [Parameter] public string Source { get; set; } = string.Empty;
    [Parameter] public string Path { get; set; } = "gallery";
    [Parameter] public string Align { get; set; } = string.Empty;
    [Parameter] public string Link { get; set; } = string.Empty;
}
